<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Users</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: white;
      color: rgb(0, 112, 120);
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: rgb(0, 112, 120);
      margin-bottom: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    table th, table td {
      border: 1px solid rgb(0, 112, 120);
      padding: 10px;
      text-align: left;
    }

    table th {
      background-color: rgb(0, 168, 180);
      color: white;
    }

    table tr:nth-child(even) {
      background-color: rgb(240, 255, 255);
    }

    table tr:hover {
      background-color: rgb(0, 168, 180);
      color: white;
    }

    a {
      text-decoration: none;
      color: white;
      background-color: rgb(0, 112, 120);
      padding: 5px 10px;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    a:hover {
      background-color: rgb(0, 168, 180);
    }

    /* Responsive design */
    @media screen and (max-width: 768px) {
      table {
        font-size: 14px;
      }

      table th, table td {
        padding: 8px;
      }

      a {
        font-size: 12px;
        padding: 4px 8px;
      }
    }

    @media screen and (max-width: 480px) {
      h1 {
        font-size: 24px;
      }

      table th, table td {
        padding: 6px;
      }

      a {
        font-size: 12px;
        padding: 4px 8px;
      }
    }
  </style>
</head>
<body>
  <h1>Manage Users</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td>
            <a href="/admin/users/delete/<%= user._id %>">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
