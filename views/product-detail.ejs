<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.name %> - Product Details</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="style.css">
</head>
<style>
    body {
        width: 100%;
        height: 100%;
        padding: 22px;
    }

    .product-page {
        display: flex;
        gap: 20px;
        margin-bottom: 40px;
        flex-wrap: wrap; /* Allow wrapping on small screens */
    }

    .product-images {
        flex: 1;
        max-width: 500px;
    }

    .main-image img {
        width: 100%;
        border-radius: 10px;
    }

    .thumbnail-gallery {
        display: flex;
        gap: 10px;
        margin-top: 10px;
        justify-content: center;
    }

    .thumbnail-gallery img {
        width: 80px;
        height: 80px;
        cursor: pointer;
        border: 2px solid transparent;
        border-radius: 5px;
    }

    .thumbnail-gallery img:hover {
        border-color: #000;
    }

    .product-details {
        flex: 1.5;
        max-width: 600px;
    }

    .product-details h1 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .product-details .item-number {
        font-size: 14px;
        color: #666;
    }

    .product-details .price {
        font-size: 20px;
        color: #d9534f;
        margin: 10px 0;
    }

    .product-details .color span {
        font-weight: bold;
    }

    .size-options button {
        padding: 10px;
        margin: 5px 5px 0 0;
        border: 1px solid #ccc;
        border-radius: 5px;
        cursor: pointer;
        background: #fff;
    }

    .size-options button:hover {
        background: #f0f0f0;
    }

    .quantity input {
        width: 60px;
        padding: 5px;
    }

    .actions button {
        padding: 10px 20px;
        margin-right: 10px;
        background: #000;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .actions button:hover {
        background: #444;
    }

    .view-count {
        margin-top: 10px;
        font-size: 14px;
        color: #777;
    }

    /* Product Info Section */
    .product-info {
        margin-bottom: 40px;
    }

    .product-info h2 {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .product-info ul {
        list-style: none;
        padding: 0;
    }

    .product-info ul li {
        margin: 5px 0;
    }

    /* How to Wear It Section */
    .how-to-wear {
        margin-top: 40px;
    }

    .how-to-wear h2 {
        font-size: 18px;
        margin-bottom: 20px;
    }

    .looks {
        display: flex;
        gap: 20px;
        flex-wrap: wrap; /* Allow wrapping on small screens */
        justify-content: center;
    }

    .look-item img {
        width: 200px;
        border-radius: 10px;
    }

    .look-item button {
        display: block;
        margin-top: 10px;
        padding: 10px 20px;
        background: #000;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .look-item button:hover {
        background: #444;
    }

    /* Media Queries for Small Screens */
    @media (max-width: 768px) {
        .product-page {
            flex-direction: column;
            align-items: center;
        }

        .product-details {
            flex: none;
            width: 100%;
            margin-top: 20px;
        }

        .product-images {
            max-width: 100%;
            margin-bottom: 20px;
        }

        .thumbnail-gallery img {
            width: 60px;
            height: 60px;
        }
    }

    @media (max-width: 576px) {
        .product-details h1 {
            font-size: 20px;
        }

        .product-details .price {
            font-size: 18px;
        }
    }
</style>
<body>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:history.back()">Back</a></li>
            <li class="breadcrumb-item active" aria-current="page">Product</li>
        </ol>
    </nav>

  <div class="container">
    <!-- Product Section -->
    <div class="product-page">
      <!-- Image Section -->
      <div class="product-images">
        <div class="main-image">
          <img id="main-product-image" src="<%= product.image || '/default-image.jpg' %>" alt="<%= product.name %>">
        </div>
        <div class="thumbnail-gallery">
          <img src="<%= product.image || '/default-image.jpg' %>" onclick="updateMainImage(this.src)" alt="Thumbnail 1">
          <img src="<%= product.image || '/default-image.jpg' %>" onclick="updateMainImage(this.src)" alt="Thumbnail 2">
          <img src="<%= product.image || '/default-image.jpg' %>" onclick="updateMainImage(this.src)" alt="Thumbnail 3">
        </div>
      </div>

      <!-- Product Details Section -->
      <div class="product-details">
        <h1><%= product.name %></h1>
        <p><%= product.description %></p>
        <p class="item-number">Item #<%= product._id %></p>
        <p class="price">$<%= product.price.toFixed(2) %></p>
        <p class="color">Color: <span><%= product.color || 'Rusted Amber' %></span></p>

        <!-- Quantity Selector -->
        <div class="quantity">
          <label>Quantity:</label>
          <input type="number" value="1" min="1">
        </div>

        <!-- Buttons -->
        <div class="actions">
            <form action="/cart/add" method="POST">
              <input type="hidden" name="productId" value="<%= product._id %>">
              <input type="hidden" name="quantity" id="quantityInput">
              <button class="add-to-bag btn btn-primary" type="submit">ADD TO BAG</button>
            </form>
        </div>
      </div>
    </div>

    <!-- Product Info Section -->
    <div class="product-info">
      <h2><strong>Product Details</strong></h2>
      <p><%= product.description || 'This item is crafted in a Fair Trade Certifiedâ„¢ facility.' %></p>
    </div>

    <!-- How to Wear It Section -->
    <div class="how-to-wear">
      <h2>How to Wear It</h2>
      <div class="looks">
        <div class="look-item">
          <button>SHOP THE LOOK</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    function updateMainImage(src) {
      document.getElementById('main-product-image').src = src;
    }
  </script>
</body>
</html>
